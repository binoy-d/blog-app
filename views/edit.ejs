<%- include("./partials/header") %> 

<div class= "ui two column centered grid">
    <div class="column">
        <h1 class = "ui header">Edit Post: "<%= blog.title %> "</h1>
        <form class = "ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class = "field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class = "field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class = "field">
                <label>Blog Content</label>
                <textarea type="text" name="blog[body]"><%= blog.body %></textarea>
            </div>
            <button class = "ui button" type="submit">Edit</button>
        </form>
    </div>
</div>
<%- include("./partials/footer") %> 